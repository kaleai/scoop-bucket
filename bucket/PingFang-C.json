        "https://raw.githubusercontent.com/tianzhijiexian/scoop-packages/master/PingFang-C.zip",
        "https://raw.githubusercontent.com/everyx/scoop-bucket/master/libexec/add-font.ps1",
        "https://raw.githubusercontent.com/everyx/scoop-bucket/master/libexec/remove-font.ps1"
    ],
    "hash": [
        "253CFCCED895C89861DD4E1DB752D9BD012D444B270A787EA3541BBBEE64AB25",
        "0D55F82359EABEEF85BFB856E9CBF9624AB5269FFD025543AD644E50F966C112",
        "9D3FA011E50E34682D5EDE8D0943F6C6F0164318526A0FD3E18092A02807D52E"
    ],
    "depends": "sudo",
    "installer": {
        "script": [
            "if(!(is_admin)) { error \"Admin rights are required, please run 'sudo scoop install $app'\"; exit 1 }",
            "$addFont = \"$dir\\add-font.ps1\"",
            "Get-ChildItem -Path $dir -Include '*.ttf','*.ttc','*.otf' -Recurse | ForEach {",
            "   Invoke-Expression -Command \"$addFont -path '$_'\"",
            "}"
        ]
    },
    "uninstaller": {
        "script": [
            "if(!(is_admin)) { error \"Admin rights are required, please run 'sudo scoop install $app'\"; exit 1 }",
            "$removeFont = \"$dir\\remove-font.ps1\"",
            "Get-ChildItem -Path $dir -Include '*.ttf','*.ttc','*.otf' -Recurse | ForEach {",
            "   Invoke-Expression -Command \"$removeFont -file '$_'\"",
            "}"
        ]
    }
}
