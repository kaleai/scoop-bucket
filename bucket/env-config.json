	"bin": "环境变量.bat",
	
	"env_set": {
        "OLD_CLASSPATH": ".;%JAVA_HOME%\bin;%JAVA_HOME%\\lib\\dt.jar;%JAVA_HOME%\\lib\tools.jar"
    },
    "post_install":[
    	"$env:TEMP_PATH=\"$env:USERPROFILE\\AppData\\Roaming\\Microsoft\\Windows\\Start Menu\\Programs\"",
    	"$env:APPS=\"$env:TEMP_PATH\\Scoop Apps\"",
    	"$env:START_UP=\"$env:TEMP_PATH\\Startup\"",

        "Copy-Item \"$dir\\.gitconfig\" -Destination \"$env:USERPROFILE\\.gitconfig\"",
        "Copy-Item \"$dir\\.bash_profile\" -Destination \"$env:USERPROFILE\\.bash_profile\"",

        "Copy-Item \"$env:APPS\\Ditto.lnk\" -Destination \"$env:START_UP\\Ditto.lnk\"",
        "Copy-Item \"$env:APPS\\quicklook.lnk\" -Destination \"$env:START_UP\\quicklook.lnk\""
        "Copy-Item \"$env:APPS\\huochat.lnk\" -Destination \"$env:START_UP\\huochat.lnk\""

        "Copy-Item \"$env:APPS\\mouse.lnk\" -Destination \"$env:START_UP\\mouse.lnk\"",
        "Copy-Item \"$env:APPS\\drag.lnk\" -Destination \"$env:START_UP\\drag.lnk\"",
        "Copy-Item \"$env:APPS\\mmap.lnk\" -Destination \"$env:START_UP\\mmap.lnk\"",

        "Copy-Item \"$env:APPS\\MouseInc.lnk\" -Destination \"$env:START_UP\\MouseInc.lnk\"",
        "Copy-Item \"$env:APPS\\优效日历..lnk\" -Destination \"$env:START_UP\\优效日历..lnk\"",
        "Copy-Item \"$env:APPS\\Snipaste.lnk\" -Destination \"$env:START_UP\\Snipaste.lnk\""
        "Copy-Item \"$env:APPS\\CapsUnlocker.lnk\" -Destination \"$env:START_UP\\CapsUnlocker.lnk\""
        
    ],
	"env_add_path": ".;%JAVA_HOME%\\lib;%JAVA_HOME%\\lib\tools.jar",
	"shortcuts": [
		[
			"环境变量.bat",
			"环境变量"
		]
    ]	
} 
